  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f0f2f5;
    }

    .header {
      background-color: #4a90e2;
      padding: 1rem 1.5rem;
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: fixed;
      top: 0;
      left: 220px;
      right: 0;
      z-index: 1000;
    }

    .sidebar {
      width: 220px;
      height: 100vh;
      background-color: #2c3e50;
      color: white;
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 4rem;
      z-index: 999;
    }

    .sidebar ul {
      list-style: none;
      padding: 0;
    }

    .sidebar ul li {
      padding: 15px 20px;
      cursor: pointer;
    }

    .sidebar ul li:hover {
      background-color: #34495e;
    }

    .main {
      margin-left: 220px;
      padding: 6rem 2rem 2rem;
    }

    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1.5rem;
    }

    .card {
      background: white;
      padding: 1rem;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .card h3 {
      margin-bottom: 0.5rem;
    }

    .card ul {
      padding-left: 1rem;
    }

    .card ul li {
      margin-bottom: 0.5rem;
    }

    .footer {
      text-align: center;
      margin-top: 2rem;
      font-size: 0.8rem;
      color: #888;
    }

    a {
      color: white;
      text-decoration: underline;
    }

    input[type="checkbox"] {
      margin-right: 8px;
    }

    #gameBoard {
      display: grid;
      grid-template-columns: repeat(3, 60px);
      gap: 5px;
      margin: 10px 0;
    }

    .cell {
      width: 60px;
      height: 60px;
      background-color: #eee;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      font-weight: bold;
      cursor: pointer;
      border-radius: 5px;
      box-shadow: inset 0 0 4px #aaa;
    }

    .cell:hover {
      background-color: #ddd;
    }

    @media screen and (max-width: 768px) {
      .sidebar {
        position: relative;
        width: 100%;
        height: auto;
      }

      .header {
        left: 0;
        top: 0;
      }

      .main {
        margin: 1rem;
        padding-top: 6rem;
      }
    }
  </style>
</head>
<body>

  <div class="sidebar">
    <ul>
      <li><i class="fas fa-home"></i> Dashboard</li>
      <li><i class="fas fa-user"></i> My Profile</li>
      <li><i class="fas fa-bell"></i> Notifications</li>
      <li><i class="fas fa-tasks"></i> Tasks</li>
      <li><i class="fas fa-comments"></i> Messages</li>
      <li><i class="fas fa-cog"></i> Settings</li>
    </ul>
  </div>

  <div class="header">
    <h2>Welcome, Nandan üëã</h2>
    <div>
      <i class="fas fa-user-circle"></i> <span>Profile</span> |
      <a href="/logout">Logout</a>
    </div>
  </div>

  <div class="main">
    <div class="cards">
      <div class="card">
        <h3>Today's Quote</h3>
        <p>‚ÄúSuccess is not the key to happiness. Happiness is the key to success.‚Äù</p>
      </div>
      <div class="card">
        <h3>Your Stats</h3>
        <p>Logins: 25<br>Last Login: Today</p>
      </div>
      <div class="card">
        <h3>To-Do List</h3>
        <ul>
          <li><input type="checkbox"> Update Profile</li>
          <li><input type="checkbox"> Check Messages</li>
          <li><input type="checkbox"> Read Notification</li>
        </ul>
      </div>
      <div class="card">
        <h3>Live Clock</h3>
        <p id="clock"></p>
      </div>
      <div class="card">
        <h3>Tic-Tac-Toe</h3>
        <div id="gameBoard">
          <div class="cell" data-index="0"></div>
          <div class="cell" data-index="1"></div>
          <div class="cell" data-index="2"></div>
          <div class="cell" data-index="3"></div>
          <div class="cell" data-index="4"></div>
          <div class="cell" data-index="5"></div>
          <div class="cell" data-index="6"></div>
          <div class="cell" data-index="7"></div>
          <div class="cell" data-index="8"></div>
        </div>
        <p id="gameStatus">Player X's turn</p>
        <button onclick="resetGame()">Reset Game</button>
      </div>
    </div>

    <div class="footer">
      &copy; 2025 Life Snaps | All Rights Reserved
    </div>
  </div>

  <script>
    function updateClock() {
      const now = new Date();
      document.getElementById('clock').textContent = now.toLocaleTimeString();
    }
    setInterval(updateClock, 1000);
    updateClock();

    let board = ["", "", "", "", "", "", "", "", ""];
    let currentPlayer = "X";
    let gameActive = true;

    const statusDisplay = document.getElementById("gameStatus");
    const cells = document.querySelectorAll(".cell");

    const winConditions = [
      [0, 1, 2], [3, 4, 5], [6, 7, 8],
      [0, 3, 6], [1, 4, 7], [2, 5, 8],
      [0, 4, 8], [2, 4, 6]
    ];

    function handleCellClick(event) {
      const index = event.target.getAttribute("data-index");

      if (board[index] !== "" || !gameActive) return;

      board[index] = currentPlayer;
      event.target.textContent = currentPlayer;

      if (checkWinner()) {
        statusDisplay.textContent = `Player ${currentPlayer} wins!`;
        gameActive = false;
        return;
      }

      if (!board.includes("")) {
        statusDisplay.textContent = "It's a draw!";
        gameActive = false;
        return;
      }

      currentPlayer = currentPlayer === "X" ? "O" : "X";
      statusDisplay.textContent = `Player ${currentPlayer}'s turn`;
    }

    function checkWinner() {
      return winConditions.some(condition => {
        const [a, b, c] = condition;
        return board[a] && board[a] === board[b] && board[a] === board[c];
      });
    }

    function resetGame() {
      board = ["", "", "", "", "", "", "", "", ""];
      currentPlayer = "X";
      gameActive = true;
      statusDisplay.textContent = `Player ${currentPlayer}'s turn`;
      cells.forEach(cell => (cell.textContent = ""));
    }

    cells.forEach(cell => cell.addEventListener("click", handleCellClick));

function analyzeSentiment() {
  const text = document.getElementById('sentimentInput').value.toLowerCase();
  const output = document.getElementById('sentimentOutput');

  if (!text.trim()) {
    output.textContent = "Please enter some text to analyze.";
    return;
  }

  // Simple rule-based mock sentiment analysis
  const positiveWords = ["happy", "good", "great", "awesome", "fantastic", "love", "excellent"];
  const negativeWords = ["sad", "bad", "angry", "hate", "terrible", "worst", "horrible"];

  let score = 0;

  positiveWords.forEach(word => {
    if (text.includes(word)) score++;
  });

  negativeWords.forEach(word => {
    if (text.includes(word)) score--;
  });

  if (score > 0) {
    output.textContent = "Sentiment: Positive üòä";
    output.style.color = "green";
  } else if (score < 0) {
    output.textContent = "Sentiment: Negative üò†";
    output.style.color = "red";
  } else {
    output.textContent = "Sentiment: Neutral üòê";
    output.style.color = "#555";
  }
}

  </script>
